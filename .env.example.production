# Production Environment Example for ergominers.com
# Copy this file to .env for production deployment

# General Settings
TAG=stable
SECRET_KEY=your_secure_production_secret_key_here
ALLOWED_ORIGINS=https://ergominers.com
BASE_URL=https://ergominers.com

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Database Configuration
POSTGRES_DB=miningcore
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_production_password_here
# For production, use the actual PostgreSQL server hostname
# If PostgreSQL is running on a dedicated server, use that server's hostname/IP
# If PostgreSQL is in a container in the same stack, use the service name
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# API Configuration
# For production, point to the production API server
API_BASE_URL=http://5.78.102.130:8000

# Schedule Configuration (in hours)
UPDATE_INTERVAL_HOURS=3

# SSL Configuration
DOMAIN_NAME=ergominers.com
EMAIL_FOR_SSL=admin@ergominers.com 